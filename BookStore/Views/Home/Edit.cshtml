@{
    ViewData["Title"] = "Edit book";
}
@model Book
<div class="text-center">
    <form method="post" style="width: 30%; margin: auto">
        <div class="form-group">
            <label>Title</label>
            <input class="form-control" type="text" name="title" value="@Model.Title" />
        </div>
        <div class="form-group">
            <label>Genre</label>
            <input class="form-control" type="text" name="genre" value="@Model.Genre" />
        </div>
        <div class="form-group">
            <label>Author</label>
            <input class="form-control" type="text" name="author" value="@Model.Author" />
        </div>
        <div class="form-group">
            <label>Year</label>
            <input class="form-control" type="number" name="year" value="@Model.Year" />
        </div>
        <div class="form-group">
            <label>Price</label>
            <input class="form-control" type="number" name="price" min="0" value="@Model.Price" />
            <small class="text-muted">*in UAH</small>
        </div>
        <button type="submit" class="btn btn-outline-success btn-lg">Edit</button>
    </form>
</div>
