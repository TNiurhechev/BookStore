@{
    ViewData["Title"] = "Add a book";
}
@model Book
<div class="text-center">
    <form method="post" style="width: 30%; margin: auto">
        <div class="form-group">
            <label>Title</label>
            <input class="form-control" type="text" name="title" />
        </div>
        <div class="form-group">
            <label>Genre</label>
            <input class="form-control" type="text" name="genre" />
        </div>
        <div class="form-group">
            <label>Author</label>
            <input class="form-control" type="text" name="author" />
        </div>
        <div class="form-group">
            <label>Year</label>
            <input class="form-control" type="number" name="year" />
        </div>
        <div class="form-group">
            <label>Price</label>
            <input class="form-control" type="number" name="price" min="0" />
            <small class="text-muted">*in UAH</small>
        </div>
        <button type="submit" class="btn btn-outline-success btn-lg">Add</button>
    </form>
</div>